{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "importHelpers": true,
    "module": "esnext",
    "moduleResolution": "Bundler",
    "noImplicitAny": true,
    "outDir": "./dist",
    "removeComments": false,
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "ES2015",
    "types": ["jest", "node"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
